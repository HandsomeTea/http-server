{
  "name": "http-server",
  "version": "1.0.0",
  "description": "common http server, include websocket.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/ts-node-dev --respawn --transpile-only ./index.ts",
    "debug": "./node_modules/.bin/ts-node-dev --respawn --transpile-only --debug ./index.ts",
    "build": "./node_modules/.bin/tsc",
    "upgrade": "./node_modules/.bin/npm-check -u",
    "doc": "./node_modules/.bin/apidoc -i ./src -o ./public/doc",
    "pkg": "./node_modules/.bin/pkg --out-path ./build .",
    "eslint": "./node_modules/.bin/eslint ./ --fix",
    "check": "npm run eslint",
    "test": "./node_modules/.bin/mocha",
    "testunit": "node -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HandsomeTea/personal-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HandsomeTea/personal-server/issues"
  },
  "homepage": "https://github.com/HandsomeTea/personal-server#readme",
  "dependencies": {
    "@godaddy/terminus": "^4.7.0",
    "agentkeepalive": "^4.1.4",
    "ali-sms": "^1.0.3",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-http-context": "^1.2.4",
    "got": "^11.8.2",
    "ioredis": "^4.24.2",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "mongoose": "^5.12.1",
    "nodemailer": "^6.5.0",
    "underscore": "^1.12.1",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/ioredis": "^4.22.0",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/nodemailer": "^6.4.1",
    "@types/underscore": "^1.11.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "apidoc": "^0.27.1",
    "eslint": "^7.22.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "npm-check": "^5.9.2",
    "pkg": "^4.4.9",
    "siege": "^0.2.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": [],
    "assets": [
      "./k8s/application.yaml"
    ],
    "targets": [
      "node12-linux-x64"
    ],
    "options": [
      "max_old_space_size=2560",
      "max_semi_space_size=512"
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "npm run eslint"
    ]
  }
}
