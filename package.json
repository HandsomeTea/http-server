{
  "name": "http-server",
  "version": "1.0.0",
  "description": "common web server",
  "main": "index.js",
  "scripts": {
    "start": "node ./server.js",
    "debug": "node --inspect ./server.js",
    "debug-brk": "node --inspect-brk ./server.js",
    "pm2": "pm2 start ./pm2/pm2.dev.config.js",
    "cluster": "pm2 start ./pm2/pm2.cluster.config.js",
    "fix": "./node_modules/.bin/eslint ./ --fix",
    "check": "npm run fix",
    "upgrade": "./node_modules/.bin/npm-check -u",
    "test": "./node_modules/.bin/mocha",
    "doc": "./node_modules/.bin/apidoc -i ./src -o ./public/doc",
    "testunit": "node -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HandsomeTea/personal-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HandsomeTea/personal-server/issues"
  },
  "homepage": "https://github.com/HandsomeTea/personal-server#readme",
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-http-context": "^1.2.3",
    "ioredis": "^4.16.1",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.1.2",
    "mongoose": "^5.9.6",
    "underscore": "^1.9.2",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "apidoc": "^0.20.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "mocha": "^7.1.1",
    "npm-check": "^5.9.2",
    "siege": "^0.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run fix"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run fix"
    ]
  }
}
